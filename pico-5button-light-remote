blueprint:
  name: Pico Light Control â€“ 5 Button (short/long) + Optional Scene
  description: >
    Control dimmable lights with a Lutron Pico 5-button remote (PJ2-3BRL).
    Short press raises/lowers brightness in steps; long press dims continuously.
    Optional: map the middle (stop/favorite) button to a scene (e.g., Movie Mode).
    Optimized for dimmable LED lights.
  domain: automation
  author: zoo-helper

  input:
    pico_remote:
      name: Lutron Pico
      selector:
        device:
          model: PJ2-3BRL-GXX-X01 (Pico3ButtonRaiseLower)
          multiple: false
    light_entity:
      name: Light
      selector:
        entity:
          domain: [light]
          multiple: false
    step_percent:
      name: Brightness step size (%)
      description: Percentage change for short press brighten/dim
      default: 15
      selector:
        number:
          min: 5
          max: 50
          step: 5
          unit_of_measurement: "%"
          mode: slider
    brightness_change_rate:
      name: Long-press repeat (ms)
      description: Delay between brightness changes while holding raise/lower
      default: 300
      selector:
        number:
          min: 100
          max: 800
          step: 50
          unit_of_measurement: ms
          mode: slider
    middle_scene:
      name: (Optional) Scene for middle button
      default:
      selector:
        entity:
          domain: [scene]
          multiple: false

mode: restart

variables:
  light: !input light_entity
  step: !input step_percent
  rate_ms: !input brightness_change_rate
  middle_scene: !input middle_scene

trigger:
  # Top (On)
  - platform: device
    device_id: !input pico_remote
    domain: lutron_caseta
    type: press
    subtype: 'on'
    id: "on"

  # Raise (Up/Brighten) - Press
  - platform: device
    device_id: !input pico_remote
    domain: lutron_caseta
    type: press
    subtype: raise
    id: "up"

  # Raise (Up/Brighten) - Release
  - platform: device
    device_id: !input pico_remote
    domain: lutron_caseta
    type: release
    subtype: raise
    id: "up_release"

  # Middle (Stop / Favorite)
  - platform: device
    device_id: !input pico_remote
    domain: lutron_caseta
    type: press
    subtype: stop
    id: "middle"

  # Lower (Down/Dim) - Press
  - platform: device
    device_id: !input pico_remote
    domain: lutron_caseta
    type: press
    subtype: lower
    id: "down"

  # Lower (Down/Dim) - Release  
  - platform: device
    device_id: !input pico_remote
    domain: lutron_caseta
    type: release
    subtype: lower
    id: "down_release"

  # Bottom (Off)
  - platform: device
    device_id: !input pico_remote
    domain: lutron_caseta
    type: press
    subtype: 'off'
    id: "off"

action:
  - choose:

      # ---------- TOP: turn on (resume last brightness or go to step) ----------
      - conditions: [{ condition: trigger, id: 'on' }]
        sequence:
          - choose:
              - conditions:
                  - condition: state
                    entity_id: !input light_entity
                    state: 'off'
                sequence:
                  - service: light.turn_on
                    target:
                      entity_id: !input light_entity
                    data:
                      brightness_pct: "{{ step | int }}"
            default:
              - service: light.turn_on
                target:
                  entity_id: !input light_entity

      # ---------- RAISE: start long press sequence ----------
      - conditions: [{ condition: trigger, id: 'up' }]
        sequence:
          # First, do a single step increase
          - variables:
              current: "{{ state_attr(light, 'brightness') | int(0) }}"
              current_pct: "{{ (current / 255 * 100) | int }}"
              target: >
                {% set val = current_pct + (step | int) %}
                {% if states(light) == 'off' %}
                  {{ step | int }}
                {% elif val > 100 %}
                  100
                {% else %}
                  {{ val }}
                {% endif %}
          - service: light.turn_on
            target:
              entity_id: !input light_entity
            data:
              brightness_pct: "{{ target | int }}"
          
          # Wait briefly, then continue if still holding
          - delay:
              milliseconds: 300
          
          # Continue ramping if button is still pressed
          - repeat:
              while:
                - condition: template
                  value_template: >
                    {% set current = state_attr(light, 'brightness') | int(0) %}
                    {% set current_pct = (current / 255 * 100) | int %}
                    {{ current_pct < 100 }}
              sequence:
                - service: light.turn_on
                  target:
                    entity_id: !input light_entity
                  data:
                    brightness_pct: >
                      {% set current = state_attr(light, 'brightness') | int(0) %}
                      {% set current_pct = (current / 255 * 100) | int %}
                      {% set new_val = current_pct + (step | int) %}
                      {{ [new_val, 100] | min }}
                - delay:
                    milliseconds: "{{ rate_ms | int }}"

      # ---------- RAISE RELEASE: stops the long press ----------
      - conditions: [{ condition: trigger, id: 'up_release' }]
        sequence: []

      # ---------- MIDDLE: scene (if provided) else toggle light ----------
      - conditions: [{ condition: trigger, id: 'middle' }]
        sequence:
          - choose:
              - conditions: "{{ middle_scene is not none and middle_scene != '' }}"
                sequence:
                  - service: scene.turn_on
                    target:
                      entity_id: "{{ middle_scene }}"
            default:
              - service: light.toggle
                target:
                  entity_id: !input light_entity

      # ---------- LOWER: start dimming sequence ----------
      - conditions: [{ condition: trigger, id: 'down' }]
        sequence:
          # First, do a single step decrease
          - variables:
              current: "{{ state_attr(light, 'brightness') | int(0) }}"
              current_pct: "{{ (current / 255 * 100) | int }}"
              target: >
                {% set val = current_pct - (step | int) %}
                {% if val < 5 %} 0 {% else %} {{ val }} {% endif %}
          - choose:
              - conditions: "{{ target | int <= 0 }}"
                sequence:
                  - service: light.turn_off
                    target:
                      entity_id: !input light_entity
            default:
              - service: light.turn_on
                target:
                  entity_id: !input light_entity
                data:
                  brightness_pct: "{{ target | int }}"
          
          # Wait briefly, then continue if still holding
          - delay:
              milliseconds: 300
          
          # Continue dimming if button is still pressed
          - repeat:
              while:
                - condition: template
                  value_template: >
                    {% set current = state_attr(light, 'brightness') | int(0) %}
                    {% set current_pct = (current / 255 * 100) | int %}
                    {{ current_pct > 5 and states(light) == 'on' }}
              sequence:
                - variables:
                    current: "{{ state_attr(light, 'brightness') | int(0) }}"
                    current_pct: "{{ (current / 255 * 100) | int }}"
                    target: >
                      {% set val = current_pct - (step | int) %}
                      {{ [val, 5] | max }}
                - choose:
                    - conditions: "{{ target | int <= 5 }}"
                      sequence:
                        - service: light.turn_off
                          target:
                            entity_id: !input light_entity
                  default:
                    - service: light.turn_on
                      target:
                        entity_id: !input light_entity
                      data:
                        brightness_pct: "{{ target | int }}"
                - delay:
                    milliseconds: "{{ rate_ms | int }}"

      # ---------- LOWER RELEASE: stops the dimming ----------
      - conditions: [{ condition: trigger, id: 'down_release' }]
        sequence: []

      # ---------- BOTTOM: Off ----------
      - conditions: [{ condition: trigger, id: 'off' }]
        sequence:
          - service: light.turn_off
            target:
              entity_id: !input light_entity